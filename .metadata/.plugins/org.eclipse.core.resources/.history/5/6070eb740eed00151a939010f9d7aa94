
public class TRI {

		private Pile pa;
		private Pile pb;
		private Pile pc;
		
		public TRI()
		{
			this.pa=new Pile();
			this.pb=new Pile();
			this.pc=new Pile();
		}
		public void setPa(Pile a)
		{
			this.pa=a;
		}
		public void setPb(Pile b)
		{
			this.pb=b;
		}
		public void setPc(Pile c)
		{
			this.pc=c;
		}
		public Pile getPa()
		{
			return this.pa;
		}
		public Pile getPb()
		{
			return this.pb;
		}
		public Pile getPc()
		{
			return this.pc;
		}
		public  void tri(Pile a,Pile b,Pile c)
		{
			
			while(!this.getPa().isEmpty())
			{
				if(this.getPb().isEmpty() || this.getPa().getEntierSommet()<pb.getEntierSommet())
				{
					pb.empile(pa.depile());
					if(!pc.isEmpty())
					{
						int i=1;
						while(i<pc.getTaillePile())
						{
							pb.empile(pc.depile());
						}
					}
					else
					{
						pc.empile(pb.depile());
					}
				}
			}
		}
		
}
